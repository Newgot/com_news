<?xml version="1.0"encoding="utf-8"?>

<extension type="component" version="3.3" method="upgrade">

    <name>COM_NEWS</name>
    <crationDate>20.04.2021</crationDate>
    <author>Newgot</author>
    <authorEmail>newgot@mail.ru</authorEmail>
    <authorUrl>https://github.com/Newgot</authorUrl>
    <licanse>GNU</licanse>
    <version>1.0.0</version>
    <description>COM_NEWS_DESC</description>

    <files folder="site">
        <folder>language</folder>
        <folder>models</folder>
        <folder>views</folder>
        <filename>news.php</filename>
        <filename>controller.php</filename>
    </files>

    <languages folder="site/language">
        <language tag ="ru-RU">ru-RU/ru-RU.com_news.ini</language>
    </languages>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <administration>
        <menu link="index.php?option=com_news">COM_NEWS</menu>
        <files folder="admin">
            <folder>views</folder>
            <folder>models</folder>
            <folder>controllers</folder>
            <folder>sql</folder>
            <folder>language</folder>
            <folder>tables</folder>

            <filename>news.php</filename>
            <filename>controller.php</filename>
        </files>

        <languages folder="admin/language">
            <language tag ="ru-RU">ru-RU/ru-RU.com_news.ini</language>
            <language tag ="ru-RU">ru-RU/ru-RU.com_news.sys.ini</language>
        </languages>
    </administration>
</extension>
